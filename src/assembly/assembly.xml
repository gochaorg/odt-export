        </fileSet>
         -->
        
        <!-- скопилированный jar -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>jar</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        
        <!-- Документация -->
        <fileSet>
            <directory>src/doc</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>*.pdf</include>
                <include>*.g</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>